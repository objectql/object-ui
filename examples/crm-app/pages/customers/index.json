{
  "type": "page",
  "title": "Customers",
  "body": [
    {
      "type": "flex",
      "justify": "between",
      "align": "start",
      "className": "mb-8 space-y-2",
      "children": [
        {
          "type": "div",
          "children": [
            { "type": "text", "value": "Customers", "className": "text-2xl font-bold tracking-tight" },
            { "type": "text", "value": "Manage your customers and view their subscription details.", "className": "text-muted-foreground" }
          ]
        },
        {
          "type": "button",
          "label": "New Customer",
          "icon": "Plus"
        }
      ]
    },
    {
      "type": "card",
      "className": "p-0 overflow-hidden",
      "children": [
        {
          "type": "data-table",
          "toolbar": [
            {
              "type": "flex",
              "justify": "between",
              "className": "p-4 border-b",
              "children": [
                {
                  "type": "div",
                  "className": "flex flex-1 items-center gap-2",
                  "children": [
                     { 
                        "type": "input", 
                        "placeholder": "Filter customers...", 
                        "className": "w-[150px] lg:w-[250px] h-8"
                     },
                     {
                        "type": "button",
                        "label": "Status",
                        "variant": "outline",
                        "size": "sm",
                        "className": "h-8 border-dashed",
                        "icon": "PlusCircle"
                     }
                  ]
                },
                {
                  "type": "div",
                  "className": "flex gap-2",
                  "children": [
                    { "type": "button", "label": "View", "variant": "outline", "size": "sm", "icon": "Settings2", "className": "h-8 lg:flex" }
                  ]
                }
              ]
            }
          ],
          "columns": [
            { 
               "header": "Customer", 
               "accessorKey": "name", 
               "sortable": true, 
               "width": 200, 
               "fixed": "left",
               "cell": {
                   "type": "flex",
                   "align": "center",
                   "gap": 2,
                   "children": [
                       { "type": "avatar", "fallback": "${name[0]}", "className": "h-8 w-8" },
                       { "type": "text", "value": "${name}", "className": "font-medium" }
                   ]
               }
            },
            { "header": "Email", "accessorKey": "email", "width": 200, "className": "text-muted-foreground" },
            { 
               "header": "Status", 
               "accessorKey": "status", 
               "type": "badge", 
               "width": 100,
               "variantMap": { "active": "default", "inactive": "secondary", "suspended": "destructive" }
            },
            { "header": "Plan", "accessorKey": "plan", "width": 120 },
            { "header": "Spent", "accessorKey": "amount", "type": "currency", "align": "right", "width": 100 },
            { 
               "header": "Actions", 
               "accessorKey": "actions", 
               "type": "action", 
               "width": 50, 
               "fixed": "right",
               "actions": [
                   { "label": "Edit", "icon": "Pencil" },
                   { "label": "Delete", "icon": "Trash", "className": "text-red-600" }
               ]
            }
          ],
          "data": [
            { "id": "1", "name": "Acme Corp", "status": "active", "email": "billing@acme.com", "plan": "Enterprise", "amount": 5000 },
            { "id": "2", "name": "Globex Inc", "status": "inactive", "email": "support@globex.com", "plan": "Startup", "amount": 1200 },
            { "id": "3", "name": "Soylent Corp", "status": "active", "email": "sales@soylent.com", "plan": "Enterprise", "amount": 8500 },
            { "id": "4", "name": "Initech", "status": "suspended", "email": "pr@initech.com", "plan": "Team", "amount": 3400 },
            { "id": "5", "name": "Umbrella Corp", "status": "active", "email": "secure@umbrella.com", "plan": "Enterprise", "amount": 9900 },
            { "id": "6", "name": "Stark Ind", "status": "active", "email": "tony@stark.com", "plan": "Custom", "amount": 150000 },
            { "id": "7", "name": "Wayne Ent", "status": "active", "email": "bruce@wayne.com", "plan": "Custom", "amount": 250000 },
            { "id": "8", "name": "Cyberdyne", "status": "inactive", "email": "ops@cyberdyne.com", "plan": "Team", "amount": 2300 }
          ],
          "pagination": true,
          "pageSize": 10,
          "selectable": true
        }
      ]
    }
  ]
}
